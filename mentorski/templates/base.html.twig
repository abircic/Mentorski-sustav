<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet" />
            <link href="{{ asset('assets/css/app.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
        <h5 class="my-0 mr-md-auto font-weight-normal">Mentorski sustav</h5>
        <nav class="my-2 my-md-0 mr-md-3">
            <a class="p-2 text-dark">

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="/logout" class="btn btn-outline-danger btn-sm">Logout</a>
                {% else %}
                    <a href="/register" class="btn btn-outline-success btn-sm">Register</a>
                    <a href="/prijava" class="btn btn-outline-success btn-sm">Login</a>
                {% endif %}</a>
        </nav>
    </div>

    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h1 class="display-4">{% block pageTitle %}{% endblock %}</h1>
        <p class="lead">{% block pageSubtitle %}{% endblock %}</p>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12 col-md">
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>

    <div class="container">
        <footer class="pt-4 my-md-5 pt-md-5 border-top">
            <div class="row">
                <div class="col-12 col-md">
                    <img class="mb-2" src="{{ asset('assets/images/brand/bootstrap.svg') }}" alt="" width="24" height="24">
                    <small class="d-block mb-3 text-muted">&copy; 2018-2019</small>
                </div>
            </div>
        </footer>
    </div>
    {% block javascripts %}
        <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('assets/js/app.js') }}"></script>
    {% endblock %}
    </body>
</html>
{# templates/base.html.twig #}

